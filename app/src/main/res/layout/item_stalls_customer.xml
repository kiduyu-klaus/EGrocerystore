<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/rev1"
            android:layout_margin="8dp">

            <TextView
                android:id="@+id/edt_stall_viewfetch_stallname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Mama Rose Store"
                android:textAlignment="center"
                android:textSize="20dp"
                android:textStyle="bold"
                android:textColor="@color/colorPrimary"
                />

            <ImageView
                android:id="@+id/edt_stall_viewfetch_stallimage"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_below="@+id/edt_stall_viewfetch_stallname"
                android:src="@drawable/login2"
                android:scaleType="centerCrop"
                android:layout_marginTop="2dp"
                />

            <TextView
                android:id="@+id/edt_stall_viewfetch_stalllocation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/edt_stall_viewfetch_stallimage"
                android:text="location: skuta"
                android:textAlignment="center"
                android:textSize="18dp"
                android:textColor="@color/colorPrimaryDark"
                />

            <TextView
                android:id="@+id/edt_stall_viewfetch_stalldescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/edt_stall_viewfetch_stalllocation"
                android:text="Fresh Vegetables Sold here.situated near beavers along nyeri karatina food"
                android:layout_marginTop="2dp"
                android:textAlignment="center"
                android:textSize="16dp"
                android:textColor="@color/colorPrimaryDark"
                />



        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_margin="5dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="7dp"
                    android:id="@+id/edt_stall_view_products"
                    android:background="@drawable/buttons"
                    android:text="Products"
                    android:textColor="@android:color/white"
                    android:layout_margin="8dp"/>

            </LinearLayout>


        </RelativeLayout>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>