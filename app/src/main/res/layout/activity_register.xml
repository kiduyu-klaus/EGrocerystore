<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@drawable/login2"
    tools:context=".Activities.RegisterActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Customer Registration"
                android:textColor="@android:color/white"
                android:textAppearance="?android:textAppearanceLarge"
                android:gravity="center"
                android:id="@+id/reg_title"
                />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:hint="Full Name :"
                android:background="@drawable/inputs"
                android:padding="10dp"
                android:inputType="text"
                android:textColorHint="@android:color/white"
                android:textColor="@android:color/white"
                android:id="@+id/fullname"
                />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:hint="Phone Number:"
                android:background="@drawable/inputs"
                android:padding="10dp"
                android:inputType="number"
                android:textColorHint="@android:color/white"
                android:textColor="@android:color/white"
                android:id="@+id/phone_number"
                />
            <Spinner
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:id="@+id/edt_location"
                android:textSize="20sp"
                android:entries="@array/profile_dropdown"
                android:textColor="@android:color/holo_red_dark"
                android:padding="10dp"
                android:inputType="number"

                />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:hint="Password:"
                android:background="@drawable/inputs"
                android:padding="10dp"
                android:inputType="textPassword"
                android:textColor="@android:color/white"
                android:textColorHint="@android:color/white"
                android:id="@+id/password_reg"
                />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:hint="Confirm Password:"
                android:background="@drawable/inputs"
                android:padding="10dp"
                android:inputType="textPassword"
                android:textColor="@android:color/white"
                android:textColorHint="@android:color/white"
                android:id="@+id/password_confm"
                />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="Customer Register"
                android:background="@drawable/buttons"
                android:padding="6dp"
                android:textAppearance="?android:textAppearanceMedium"
                android:textColor="@android:color/white"
                android:id="@+id/btn_reg"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:textAppearanceSmall"
                android:text="Already have account?Sign in here"
                android:gravity="center"
                android:textColor="@android:color/white"
                android:padding="5dp"
                android:textSize="19sp"
                android:id="@+id/signin_txt"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:textAppearanceSmall"
                android:text="Are You A Vendor..Click Here"
                android:gravity="center"
                android:textColor="@android:color/holo_red_dark"
                android:padding="5dp"
                android:layout_marginTop="5dp"
                android:textSize="19sp"
                android:id="@+id/vendor_txt"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:textAppearanceSmall"
                android:text="Are You A Customer..Click Here"
                android:gravity="center"
                android:textColor="@android:color/holo_red_dark"
                android:padding="5dp"
                android:layout_marginTop="5dp"
                android:textSize="19sp"
                android:id="@+id/customer_txt"
                android:visibility="invisible"
                />


        </LinearLayout>
    </ScrollView>



</RelativeLayout>